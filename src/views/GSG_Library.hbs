<div id="searchDiv">
  <form action="" autocomplete="on">
    <input id="search" name="search" type="text" placeholder="search.."><input id="search_submit" value="Rechercher" type="submit">
  </form>
</div>
<div id="contanier" class="divTable paleBlueRows">
  <div class="divTableHeading">
    <div class="divTableRow">
      <div class="divTableHead">No.</div>
      <div class="divTableHead">Book Name</div>
      <div class="divTableHead">Auther</div>
      <div class="divTableHead">Book Type</div>
      <div class="divTableHead">lend</div>
      <div class="divTableHead">Action</div>
    </div>
  </div>

  <div class="divTableBody">
    {{#each booksData}}

      <div class="divTableRow">
        <div class="divTableCell" id="id-{{@index}}">{{this.id}}</div>
        <div class="divTableCell" id="bname-{{@index}}">{{this.book_name}}</div>
        <div class="divTableCell" id="author-{{@index}}">{{this.author}}</div>
        <div class="divTableCell" id="type-{{@index}}">{{this.cat_name}}</div>

        <div class="divTableCell">
          {{#if book_id}}
            <i class="far fa-check-circle" style="font-size:20px;color:green;margin:5px"></i>
          {{/if}}
        </div>

        <div class="divTableCell">
          <div class="action">
            <div class="edit" id="edit-{{@index}}">
              <a href="#" class="myBtn" id= {{this.id}}><i class="fas fa-pencil-alt"></i></a>
            </div>

            <div id="myModal" class="modal">

              <!-- Edit -->
              <div class="modal-content">
                <span class="close">&times;</span>

                <div class="container">

                  <form>
                    <label for="bname">Book name: </label>
                    <br>
                    <input type="text" id="bname" class="bname" name="bookname" value="{{this.book_name}}">
                    <br>

                    <label for="author">author: </label>
                    <br>
                    <input type="text" id="author" class="author" name="author" value="{{this.author}}">
                    <br>
                    <label for="date">publish year: </label>
                    <br>
                    <input type="text" id="publish_year" class="publish_year" name="publish_date" value="{{this.publish_year}}">
                    <br>
                    <select id="category" name="category" class="category">
                    {{#each this.category}}
                    <option value={{this.id}}>{{this.name}}</option>
                    {{/each}}
                  </select>
                    <br>

                    <label for="subject">description: </label>
                    <br>
                    <textarea class="description" name="subject" value="{{this.description}}" style="height:100px"></textarea>
                    <br>
                    <button type="submit" name="button" value="submit" class="update" id= {{this.id}}>update</button>
                  </form>
                </div>
              </div>
            </div>


            <div class="divDelete">
              <button type="button" name="button" class='deleteBtn'><i class="fas fa-trash-alt" style="font-size:20px;color:red;margin:5px"></i></button>
            </div>
            <div id="myModale" class="modale">
              <div class="modale-content">

                <span class="deletClose">&times;</span>
                <h5>Are you sure you want to delete this book??</h5>
                <div class="buttons">

                  <a href="/delete/{{this.id}}">
        <button class='delete button'type="submit" name="button">DELETE</button>
      </a>

                  <button class='cancel button' type="submit" name="button">CANCEL</button>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>
<!-- <button class="trigger" ></button> -->
<div class="modall">
  <div class="modall-content">
    <span class="closes-button">&times;</span>
    <h2>Are you sure you want to delete this book??</h2>

    <div class="buttons">


      <button class='deletebookbtn button' type="submit" name="button">DELETE</button>


      <button class='cancel button' type="submit" name="button">CANCEL</button>
    </div>
  </div>
</div>



<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="/js/GSG.js" charset="utf-8"></script>
